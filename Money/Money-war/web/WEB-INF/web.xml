<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.VALIDATE_EMPTY_FIELDS</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <description>Development, Production, SystemTest, UnitTest</description>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>ui-lightness glass-x flick sunny dot-luv blitzer south-street mint-choc midnight le-frog aristo black-tie cupertino hot-sneaks pepper-grinder redmond trontastic rocket</description>
        <param-name>primefaces.THEME</param-name>
        <param-value>humanity</param-value>
    </context-param>
    <context-param>
        <param-name>timezone</param-name>
        <param-value>GMT-3</param-value>
    </context-param>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>br.com.gbvbahia.money.filtros.FilterLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/financeiro/*</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/manager/*</url-pattern>
    </filter-mapping>
    <ejb-local-ref>
        <ejb-ref-name>DetalheUsuarioBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.money.business.interfaces.DetalheUsuarioBeanLocal</local>
        <ejb-link>Money-ejb.jar#DetalheUsuarioBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ContaBancariaBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.money.business.interfaces.ContaBancariaBeanLocal</local>
        <ejb-link>Money-ejb.jar#ContaBancariaBean</ejb-link>
    </ejb-local-ref>
</web-app>
