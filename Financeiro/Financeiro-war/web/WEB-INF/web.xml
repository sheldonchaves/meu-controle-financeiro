<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>com.sun.faces.verifyObjects</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>com.sun.faces.validateXml</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <listener>
        <description>Vencimentos Proximos</description>
        <listener-class>br.com.financeiro.listeners.IniciaTimerVencimentos</listener-class>
    </listener>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- Filtros Aplicacao -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>br.com.financeiro.filtros.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/cadastro/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/principal/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/pessoal/*</url-pattern>
    </filter-mapping>
     <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/provisoes/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/auxiliar/*</url-pattern>
    </filter-mapping>

    <!-- RichFaces -->
    <!-- A ligaÃ§Ã£o do "Blue Sky" pele para o projeto -->
    <context-param>
        <param-name>org.richfaces.SKIN</param-name>
        <param-value>wine</param-value>
        <!-- laguna  glassX  darkX  blueSky  classic  ruby  wine  deepMarine  emeraldTown  plain  -->
    </context-param>
    <!-- Making the RichFaces skin spread to standard HTML controls -->
    <context-param>
        <param-name>org.richfaces.CONTROL_SKINNING</param-name>
        <param-value>enable</param-value>
    </context-param>
    <!-- Defining and mapping the RichFaces filter -->
    <filter>
        <display-name>RichFaces Filter</display-name>
        <filter-name>richfaces</filter-name>
        <filter-class>org.ajax4jsf.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>richfaces</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>
    <ejb-local-ref>
        <ejb-ref-name>UserBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.financeiro.ejbbeans.interfaces.UserLocal</local>
        <ejb-link>Financeiro-ejb.jar#UserBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>GrupoFinanceiroBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.financeiro.ejbbeans.interfaces.GrupoFinanceiroLocal</local>
        <ejb-link>Financeiro-ejb.jar#GrupoFinanceiroBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>CartaoCreditoBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.financeiro.ejbbeans.interfaces.CartaoCreditoLocal</local>
        <ejb-link>Financeiro-ejb.jar#CartaoCreditoBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ContaBancariaBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.financeiro.ejbbeans.interfaces.ContaBancariaLocal</local>
        <ejb-link>Financeiro-ejb.jar#ContaBancariaBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>TimeServiceBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>br.com.financeiro.ejbbeans.timeservices.interfaces.TimeServiceLocal</local>
        <ejb-link>Financeiro-ejb.jar#TimeServiceBean</ejb-link>
    </ejb-local-ref>
</web-app>
